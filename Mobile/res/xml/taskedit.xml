<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

        <EditTextPreference
                android:key="taskedit_name"
                android:title="@string/title_taskedit_name"
                android:summary="@string/content_taskedit_name"
                android:dialogTitle="@string/dialog_taskedit_name" />
        
        <CheckBoxPreference
                android:key="taskedit_urgent"
                android:title="@string/title_taskedit_urgent"
                android:summary="@string/summary_taskedit_urgent" />
        
        <EditTextPreference
                android:key="taskedit_tag"
                android:title="@string/title_taskedit_tag"
                android:summary="@string/content_taskedit_tag"
                android:dialogTitle="@string/dialog_taskedit_tag" />
        
        <ListPreference
                android:key="taskedit_priority"
                android:title="@string/title_taskedit_priority"
                android:summary="@string/summary_taskedit_priority"
                android:entries="@array/entries_taskedit_priority"
                android:entryValues="@array/entryvalues_taskedit_priority"
                android:dialogTitle="@string/dialog_title_taskedit_priority" />
        
        <EditTextPreference
                android:key="taskedit_note"
                android:title="@string/title_taskedit_note"
                android:summary="@string/content_taskedit_note"
                android:dialogTitle="@string/dialog_taskedit_note" />
        
        <com.damaitan.mobileUI.TimePreference 
            	android:key="taskedit_expire" 
            	android:title="@string/title_taskedit_expire"
            	android:dialogTitle="@string/dialog_taskedit_expire" /> 
        
       
</PreferenceScreen>